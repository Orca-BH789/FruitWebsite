@model IEnumerable<NUTRI_Project.Models.Cart>
@using NUTRI_Project.Models
@{
    ViewBag.Title = "Order";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="breadcrumb-section set-bg " data-setbg="/Image/BG/BG3.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text text-dark">
                    <h2>Fruit Shop</h2>
                    <div class="breadcrumb__option">
                        <a href="./index">Home</a>
                        <span>OrderDetail</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="checkout spad">
    <div class="container">

        <div class="checkout__form">           
            <div>
                <div>
                    <div style="width:90%; margin-left:5%">

                        <div class="checkout__order">
                            <h4>Hóa Đơn của bạn</h4>                            
                            <table class="table checkout__order__products">
                                <thead>
                                    <tr>
                                        <th scope="col">Sản Phẩm</th>
                                        <th> </th>
                                        <th scope="col">SL</th>
                                        <th scope="col">DG</th>
                                        <th>   </th>
                                        <th> </th>
                                        <th> </th>
                                        <th> </th>
                                        <th scope="col">Tổng Cộng</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {                                        
                                        <tr>
                                            <th>@item.Name</th>
                                            <td> </td>
                                            <td>@item.quantity</td>
                                            <td>@string.Format("{0:#,##0,0}", item.Pice)</td>
                                            <td>   </td>
                                            <td> </td>
                                            <td> </td>
                                            <td> </td>
                                            <td>@string.Format("{0:#,##0,0}", item.Pice * item.quantity)</td>
                                        </tr>
                                    }                                    
                                </tbody>
                            </table>
                            @*<ul>
                                @foreach (var item in Model)
                                {
                                    <li>@item.Name<span>@string.Format("{0:#,##0,0}", item.Pice * item.quantity)</span></li>
                                }
                            </ul>*@
                            <div class="checkout__order__total">Tổng Tiền <span>  @string.Format("{0:#,##0,0}", @ViewBag.Total)</span></div>
                            <div class="checkout__input__checkbox">
                                <label for="acc-or">
                                    COD
                                    <input name="bnt" value="1" type="radio" id="acc-or">
                                    <span class="checkmark"></span>
                                </label>
                            </div>

                            <div class="checkout__input__checkbox">
                                <label for="payment">
                                    VNPay
                                    <input name="bnt" value="2" type="radio" id="payment">
                                    <span class="checkmark"></span>
                                </label>
                            </div>
                            <button id="btn1" class="site-btn">Thanh Toán</button>
                            <script language="javascript">
                                var ID = "";
                                document.getElementById("btn1").onclick = function () {
                                    var checkbox = document.getElementsByName("bnt");
                                    for (var i = 0; i < checkbox.length; i++) {
                                        if (checkbox[i].checked === true) {
                                            ID = checkbox[i].value;

                                        }
                                    }
                                    if (ID == "1")
                                        location.href = "@Url.Action("OrderPay", "Cart")";
                                    else if (ID == "2")
                                        location.href = "@Url.Action("Payment","Cart")";
                                    else alert("Chọn Hình Thức Thanh Toán");
                                }
                            </script>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>





