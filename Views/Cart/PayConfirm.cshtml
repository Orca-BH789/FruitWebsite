
@{
    ViewBag.Title = "PayConfirm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="breadcrumb-section set-bg " data-setbg="/Image/BG/BG7.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text text-dark">
                    <h2>Fruit Shop</h2>
                    <div class="breadcrumb__option">
                        <a href="./index">ShoppingCart</a>
                        <span>- Pay Success</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@if (Session["Check"] != null)
{
<section class="featured spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h1>Thanh Toán Thành Công!</h1>
                    <p>Đơn hàng của bạn đã được ghi nhận. Chúng tôi sẽ liên hệ với bạn trong thời gian sớm nhất.</p>

                    <p>Cảm ơn bạn đã mua sắm tại cửa hàng chúng tôi.</p>
                    <p>@ViewBag.Message</p>
                    <p class="text-center">@Html.ActionLink("Về Trang chủ", "Index", "Home")</p>
                </div>
            </div>
        </div>
    </div>
</section>
}
else {
<section class="featured spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h1>Thanh Toán Thất Bại!</h1>
                    <p>Vui lòng thử lại sau : @ViewBag.Message </p>
                    <p>Cảm ơn bạn đã mua sắm tại cửa hàng chúng tôi. Hãy liên hệ chúng tôi qua số hotline: 18008119</p>                    
                    <p class="text-center">@Html.ActionLink("Về Trang chủ", "Index", "Home")</p>
                </div>
            </div>
        </div>
    </div>
</section>



}