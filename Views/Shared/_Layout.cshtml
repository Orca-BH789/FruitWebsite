<!DOCTYPE html>
<html lang="zxx">

<head>
    <meta charset="UTF-8">
    <meta name="description" content="NUTRI Template">
    <meta name="keywords" content="NUTRI, unica, creative, html">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>NUTRI | Template</title>

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@200;300;400;600;900&display=swap" rel="stylesheet">

    <!-- Css Styles -->
    <link rel="stylesheet" href="~/Content/Asset/css/bootstrap.min.css" type="text/css">
    <link rel="stylesheet" href="~/Content/Asset/css/font-awesome.min.css" type="text/css">
    <link rel="stylesheet" href="~/Content/Asset/css/elegant-icons.css" type="text/css">
    <link rel="stylesheet" href="~/Content/Asset/css/nice-select.css" type="text/css">
    <link rel="stylesheet" href="~/Content/Asset/css/jquery-ui.min.css" type="text/css">
    <link rel="stylesheet" href="~/Content/Asset/css/owl.carousel.min.css" type="text/css">
    <link rel="stylesheet" href="~/Content/Asset/css/slicknav.min.css" type="text/css">
    <link rel="stylesheet" href="~/Content/Asset/css/style.css" type="text/css">
</head>

<body style="position: relative;">
    <!-- Page Preloder -->
    @*<div id="preloder">
            <div class="loader"></div>
        </div>*@

    <!-- Humberger Begin -->
    <div class="humberger__menu__overlay"></div>
    <div class="humberger__menu__wrapper">
        <div class="humberger__menu__logo">
            <a href="#"><img src="~/Content/Asset/img/logo.png" alt=""></a>
        </div>
        <div class="humberger__menu__cart">
            <ul>
                <li><a href="#"><i class="fa fa-heart"></i> <span>1</span></a></li>
                <li><a href="#"><i class="fa fa-shopping-bag"></i> <span>3</span></a></li>
            </ul>
            <div class="header__cart__price">item: <span>$150.00</span></div>
        </div>
        <div class="humberger__menu__widget">
            <div class="header__top__right__language">
                <img src="~/Content/Asset/img/language.png" alt="">
                <div>English</div>
                <span class="arrow_carrot-down"></span>
                <ul>
                    <li><a href="#">Spanis</a></li>
                    <li><a href="#">English</a></li>
                </ul>
            </div>
            <div class="header__top__right__auth">
            </div>
        </div>
        <nav class="humberger__menu__nav mobile-menu">
            <ul>
                <li class="active"><a href="./index.html">Home</a></li>
                <li><a href="./shop-grid.html">Shop</a></li>                
                <li><a href="./contact">Contact</a></li>
            </ul>
        </nav>
        <div id="mobile-menu-wrap"></div>
        <div class="header__top__right__social">
            <a href="#"><i class="fa fa-facebook"></i></a>
            <a href="#"><i class="fa fa-twitter"></i></a>
            <a href="#"><i class="fa fa-linkedin"></i></a>
            <a href="#"><i class="fa fa-pinterest-p"></i></a>
        </div>
        <div class="humberger__menu__contact">
            <ul>
                <li><i class="fa fa-envelope"></i> hello@colorlib.com</li>
                <li>Free Shipping for all Order of $99</li>
            </ul>
        </div>
    </div>
    <!-- Humberger End -->
    <!-- Header Section Begin -->
    <header class="header sticky-top" style="background-color:#fff;">
        <div class="header__top bg-danger text-light">
            <div class="container">
                <strong>Sale cuối năm </strong>

            </div>
        </div>

        <div class="container ">
            <div class="row">
                <div class="col-lg-3">
                    <div class="header__logo">
                        <a href="@Url.Action("Index","Home")"><img src="~/Content/Asset/img/logo.png" alt=""></a>
                    </div>
                </div>
                <div class="col-lg-6">
                    <nav class="header__menu">
                        <ul>
                            <li><a href="@Url.Action("Index","Home")">Home</a></li>
                            <li><a href="@Url.Action("Shop","Home")">Shop</a></li>                  
                            <li><a href="@Url.Action("Contact","Home")">Contact</a></li>
                        </ul>
                    </nav>
                </div>
                <div class="col-lg-3">
                    <div class="header__cart">
                        <ul>
                            @if (Session["TenDN"] == null)
                            {

                                <li><i class="fa fa-user"></i><a class="text-dark font-weight-bold p-2" href="@Url.Action("Login", "User", new { preURL = Request.Url.ToString() })">Login</a></li>
                                <li><a href="#"><i class="fa fa-shopping-bag" title="Trống(0)"></i><span>0</span></a></li>


                            }
                            else
                            {

                            <li><i class="fa fa-user"></i><a href="@Url.Action("info", "User", new { id = Session["ID"] })" class="text-dark font-weight-bold p-2">@Session["Ten"].ToString()</a></li>
                            <li>@Html.Action("Cartpartial", "Cart")</li>

                            }
                            </ul>
                </div>
            </div>
        </div>
        <div class="humberger__open">
            <i class="fa fa-bars"></i>
        </div>
    </div>
</header>
<!-- Header Section End -->
<!-- Hero Section Begin -->
<section class="hero">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="hero__categories">
                    <div class="hero__categories__all">
                        <i class="fa fa-bars"></i>
                        <span>Quà Tặng</span>
                    </div>
                </div>
            </div>
            <div class="col-lg-9">
                <div class="hero__search">
                    <div class="hero__search__form">
                        <form action="#">
                            <input type="text" placeholder="Tìm kiếm">
                            <button type="submit" class="site-btn">SEARCH</button>
                        </form>
                    </div>
                    <div class="hero__search__phone">
                        <div class="hero__search__phone__icon">
                            <i class="fa fa-phone"></i>
                        </div>
                        <div class="hero__search__phone__text">
                            <h5>+65 11.188.888</h5>
                            <span>support 24/7 time</span>
                        </div>
                    </div>
                    @*<div class="hero__item set-bg" data-setbg="Content/Asset/img/hero/banner.jpg">
                            <div class="hero__text">
                                <span>FRUIT FRESH</span>
                                <h2>Vegetable <br />100% Organic</h2>
                                <p>Free Pickup and Delivery Available</p>
                                <a href="#" class="primary-btn">SHOP NOW</a>
                            </div>
                        </div>*@
                </div>
            </div>
        </div>
    </div>
</section>



@RenderBody()
<!-- Featured Section End -->
