@model IEnumerable<NUTRI_Project.Models.Product>

    @{
        ViewBag.Title = "Home Page";
    }
    <div class="hero__item set-bg" data-setbg="/Content/Asset/img/hero/Banner.jpg" style="position: relative; z-index:-1; max-width:5000px;">
        <div class="hero__text">
            <span>FRUIT FRESH</span>
            <h2> Fruit <br />100% Organic
            </h2>
            <p>Free Pickup and Delivery Available</p>
            <a href="@Url.Action("Index","Home")" class="primary-btn">MUA NGAY</a>
        </div>
    </div>
    <section class="featured spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title">
                        <h2>SẢN PHẨM MỚI </h2>
                    </div>
                </div>
            </div>
            <div class="row featured__filter">
                @foreach (var item in Model)
                {
                    <div class="col-lg-3 col-md-4 col-sm-6 mix fastfood oranges">
                        <div class="featured__item">
                            <div class="featured__item__pic set-bg" data-setbg="/Image/UploadedFiles/@item.Image">
                            </div>
                            <div class="featured__item__text">
                                <h6><a href="#">@item.Name</a></h6>
                                <h5>@String.Format("{0:N0}", item.Price) VNĐ</h5>
                                <a href="@Url.Action("Detail", "Home", new { id = item.ID })" class="mt-2 px-5 primary-btn rounded ">Mua Ngay</a>
                              
                            </div>
                        </div>
                    </div>
                }
                </div>
        </div>
    </section>
